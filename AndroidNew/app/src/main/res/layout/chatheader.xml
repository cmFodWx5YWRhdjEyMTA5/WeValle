        <View
            android:id="@+id/view_dummy"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_interests"
            android:layout_marginTop="3dp" />

    </LinearLayout>

</LinearLayout>