<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical">

        <include layout="@layout/header" />

    </LinearLayout>

    <!--<android.support.v4.widget.NestedScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:fillViewport="true"-->
        <!--android:layout_height="match_parent">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/ll_upgrade_to_premium"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/container_toolbar"

                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:background="@drawable/upgrade_rounded"
                android:layout_marginTop="9dp"
                android:orientation="horizontal"
                android:visibility="gone">


                <TextView
                    android:id="@+id/txt_offertext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="3dp"
                    android:layout_toRightOf="@+id/rl_premium"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="17sp" />


                <RelativeLayout
                    android:id="@+id/rl_premium"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/premium">


                </RelativeLayout>

            </RelativeLayout>

            <!--<com.viewpagerindicator.TitlePageIndicator-->
            <!--android:id="@+id/indicator"-->
            <!--style="@style/Widget.MyTitlepageIndicator"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="40dp"-->
            <!--android:background="@color/whiteprofile" />-->

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    <!--</android.support.v4.widget.NestedScrollView>-->


</LinearLayout>
