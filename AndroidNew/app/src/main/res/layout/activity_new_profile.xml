<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout_profile"
    android:layout_height="match_parent"
    tools:context="com.OldScreens.OldProfile">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical"
                tools:context="com.MainFragments.ProfileFragment">

                <RelativeLayout
                    android:id="@+id/rl_top"
                    android:layout_width="wrap_content"
                    android:layout_height="370dp"
                    android:layout_centerHorizontal="true">


                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:theme="@style/Progressbar.White"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />


                    <android.support.v4.view.ViewPager
                        android:id="@+id/user_allimages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <LinearLayout
                        android:id="@+id/ll_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/usernamecolor"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/tv_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_toRightOf="@+id/tv_name"
                                android:text=""
                                android:textColor="@color/usernamecolor"
                                android:textSize="30sp" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/usernamecolor"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <android.support.design.widget.FloatingActionButton
                        android:visibility="gone"
                        android:id="@+id/btn_send_message"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:backgroundTint="@color/chat"
                        app:borderWidth="0dp"
                        app:elevation="5dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/whitechat" />



                    <android.support.design.widget.FloatingActionButton
                        android:visibility="gone"
                        android:id="@+id/btn_edit_profile"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:fabSize="normal"
                        app:backgroundTint="@color/purp"
                        app:borderWidth="0dp"
                        app:elevation="5dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/edit_document" />

                </RelativeLayout>

<LinearLayout

android:layout_marginBottom="@dimen/dimen_20dp"
    android:padding="15dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

                    <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Heritage"
                                    android:textColor="@color/unanswercolor"
                                    android:textSize="15sp" />


                            <TextView
                                android:layout_marginTop="5dp"
                                android:id="@+id/tv_heritage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/answercolor"
                                android:textSize="15sp" />


                                <TextView
                                    android:layout_marginTop="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Profession"
                                    android:textColor="@color/unanswercolor"
                                    android:textSize="15sp" />


                            <TextView
                                android:layout_marginTop="5dp"
                                android:id="@+id/tv_profession"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/answercolor"
                                android:textSize="15sp" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:textColor="@color/unanswercolor"
                    android:textSize="15sp" />


                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/answercolor"
                    android:textSize="15sp" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About me"
                    android:textColor="@color/unanswercolor"
                    android:textSize="15sp" />


                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/answercolor"
                    android:textSize="15sp" />
</LinearLayout>

            </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:id="@+id/container_toolbar_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/header_profile_page" />
        </LinearLayout>


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
