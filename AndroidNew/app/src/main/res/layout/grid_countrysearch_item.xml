<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main_historytiem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:theme="@style/Progressbar.White" />


        <RelativeLayout
            android:background="@drawable/rounded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/rounded"
                android:id="@+id/img_search_user"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/rl_premium"
                android:layout_width="102dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/img_search_user"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/premium_label_bg">

                <TextView
                    android:id="@+id/txt_premiumtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Premium"
                    android:textColor="@color/whiteprofile"
                    android:textSize="13sp"
                    android:visibility="visible" />

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="3dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_onlinenow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="-1dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt_distance"
                android:text="@string/Onlinenow"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:visibility="invisible" />
            <View
                android:layout_width="wrap_content"
                android:layout_below="@+id/txt_onlinenow"
                android:layout_height="4dp"
                android:layout_centerHorizontal="true"
                android:background="@color/transparent"
                />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>