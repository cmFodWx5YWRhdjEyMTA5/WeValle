<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:clickable="true"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lay_relative"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/buttoncolornew">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_back_header"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/img_profile_header"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="3dp"
                    android:background="@drawable/circular_white_solid"
                    android:padding="2dp"
                    android:src="@drawable/profile"
                    android:visibility="gone" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="3.5">

                <com.editprofile.FontText
                    android:id="@+id/txt_headerlogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/WeValle"
                    android:textColor="#ffffff"
                    android:textSize="19sp"
                    custom:typefaceAsset="fonts/HarabaraFont.otf"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_headerlogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:visibility="visible" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/img_menu"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:paddingLeft="5dp"
                    android:src="@drawable/settings_menu_icon"
                    android:visibility="gone" />


                <RelativeLayout
                    android:id="@+id/rl_wevalle"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"

                    android:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/filterbtn"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:visibility="gone"
                        android:textStyle="bold" />


                </RelativeLayout>


                <ImageView
                    android:id="@+id/img_mylocation"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/option_btn"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>